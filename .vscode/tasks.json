{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "prepare-dynamodb",
      "dependsOn": ["init-dynamodb"],
      "problemMatcher": []
    },
    {
      "label": "init-dynamodb",
      "type": "shell",
      "command": "bash",
      "args": ["dynamodb-init.sh"],
      "dependsOn": ["build-dynamodb"],
      "problemMatcher": []
    },
    {
      "label": "build-dynamodb",
      "type": "docker-run",
      "dockerRun": {
        "image": "amazon/dynamodb-local",
        "containerName": "chrome-ll",
        "ports": [
          {
            "containerPort": 8000,
            "hostPort": 8000,
            "protocol": "tcp"
          }
        ]
      }
    }
  ]
}
