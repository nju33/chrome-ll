{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "chrome-ll",
  "description": "for items of chrome-ll",
  "type": "object",
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["alias", "url"],
        "properties": {
          "alias": {
            "description": "alias",
            "type": "string",
            "minLength": 1
          },
          "url": {
            "description": "url",
            "type": "string",
            "format": "url",
            "pattern": "^(https?|file)://"
          }
        }
      }
    }
  }
}
